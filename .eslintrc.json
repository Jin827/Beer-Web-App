{
    "env": {
        "browser": true,
        "node": true
    },
    "extends": [
        "airbnb",
        "prettier/react",
        "eslint:recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true
            }
        ],
        "react/jsx-uses-vars": "error",
        "ignorePatterns": [
            "*.config.js",
            "node_modules"
        ]
    }
}